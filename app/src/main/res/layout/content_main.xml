<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/scrollviewBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thetttecommunity.tttecommunityyoutubechannels.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:id="@+id/thomastubersicon"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25.43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Random Thomas and Friends YouTube Channel"
            android:id="@+id/week"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25.43"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="125dp"
            android:id="@+id/random_user_image_icon"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25.43"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name:"
            android:id="@+id/yt_name_title"
            android:layout_weight="25.43"
            android:layout_marginTop="15dp"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading..."
            android:id="@+id/yt_name_fill"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="25.43"
            android:layout_marginTop="-28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/sub_count_title"
            android:layout_weight="25.43"
            android:text="Subscribers:"
            android:layout_marginTop="6dp"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loading..."
            android:id="@+id/sub_count_fill"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="25.43"
            android:layout_marginTop="-24dp"
            android:layout_marginLeft="80dp"
            android:textColor="#030000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Content: "
            android:id="@+id/pri_cont_title"
            android:layout_weight="25.43"
            android:layout_marginTop="6dp"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loading..."
            android:id="@+id/pri_cont_fill"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="25.43"
            android:layout_marginTop="-26dp"
            android:layout_marginLeft="90dp"
            android:textColor="#030000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Video View:"
            android:id="@+id/total_view_title"
            android:layout_weight="25.43"
            android:layout_marginTop="6dp"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loading..."
            android:id="@+id/total_view_fill"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="25.43"
            android:layout_marginTop="-24dp"
            android:layout_marginLeft="90dp"
            android:textColor="#030000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Number of Videos:"
            android:id="@+id/video_count_title"
            android:layout_weight="25.43"
            android:layout_marginTop="6dp"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loading..."
            android:id="@+id/video_count_fill"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="25.43"
            android:layout_marginTop="-24dp"
            android:layout_marginLeft="90dp"
            android:textColor="#030000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Active"
            android:id="@+id/last_active_title"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="25.43"
            android:textColor="#030000"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loading..."
            android:id="@+id/last_active_fill"
            android:layout_gravity="right"
            android:layout_weight="25.43"
            android:layout_marginTop="-35dp"
            android:textColor="#030000" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/see_all_users_in_database_button"
            android:layout_weight="25.43"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:id="@+id/update_data_button"
            android:layout_gravity="right"
            android:layout_weight="25.43" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:id="@+id/find_by_prim_cont_button"
            android:layout_weight="25.43"
            android:layout_marginTop="-90dp" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/submit_channel_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25.43"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:autoLink="web"
            android:onClick="goToTwitter"
            android:id="@+id/twitter_button"
            android:layout_weight="25.43"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/dev_cloud_button"
            android:layout_gravity="right"
            android:layout_weight="25.43"
            android:layout_marginTop="-50dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/yt_cloud_button"
            android:layout_gravity="right"
            android:clickable="true"
            android:autoLink="web"
            android:onClick="goToYoutube"
            android:layout_weight="25.43"
            android:layout_marginRight="78dp"
            android:layout_marginTop="-50dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/fb_button"
            android:clickable="true"
            android:autoLink="web"
            android:onClick="goToFacebook"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25.43"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>

</ScrollView>
